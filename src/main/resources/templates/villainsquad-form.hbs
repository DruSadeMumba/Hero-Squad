{{#if editSquad}}
    <h1>Edit this squad!</h1>
    <form action="/villainssquad/{{squad.id}}" method="POST">
        <label for="name">Change Squad name</label>
        <input id="newSquadName" name="newSquadName" type="text" value="{{squad.name}}" required>
        <label for="cause">Change Squad name</label>
        <input id="newSquadCause" name="newSquadCause" type="text" value="{{squad.cause}}" required>
        <input type="number" name="NewMaxSize" id="maxSize"  min="1" max="10" value="{{squad.maxSize}}" required>
        <button type="submit" class="btn btn-default">Confirm Changes!</button>
    </form>

{{else}}

<h1>Add a new Villain Squad!</h1>
<form action="/villainssquad" method="POST">
    <label for="name" >Squad Name</label>
    <input id="name" name="name" type="text" required>
    <label for="cause" >Your Purpose...</label>
    <input id="cause" name="cause" type="text" required>
    <label for="maxSize"><strong>Squad Size</strong></label>
    <input type="number" name="maxSize" id="maxSize"  min="1" max="10"  required>
    <button type="submit" class="btn btn-default">CREATE!</button>
</form>
{{/if}}